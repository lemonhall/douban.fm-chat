{
  "name" : "豆瓣DJ兆赫",
  "manifest_version": 2,
  "version" : "0.1",
  "description" : "让DJ与听众之间有更近的距离",
  "browser_action": {
      "default_icon": "doubanicon-24.png",
      "default_title": "让DJ与听众之间有更近的距离"
  },
  "icons": { "16": "icon-voice-16.png",
           "48": "icon-voice-48.png",
          "128": "icon-voice-128.png" },
  "content_scripts" : [
    {
      "matches" : [
        "http://douban.fm/*"
      ],
      "css": ["douban/chat_css.css"],
      "js" : ["lib/jquery-1.7.2.min.js",
              "douban/socket.io.js",
              "douban/common.js"
              ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "background",
        "unlimitedStorage",
        "http://douban.fm/*"
    ]
}
